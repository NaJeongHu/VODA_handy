<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedMenuActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/detail_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/detail_toolbar"
            android:background="@android:color/white"
            android:layout_width="fill_parent"
            android:layout_height="47.0dip"
            android:backgroundTint="@android:color/white"
            app:layout_scrollFlags="enterAlways">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip">

                <ImageView
                    android:id="@+id/iv_detail_back"
                    android:layout_gravity="center_vertical"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/icon_back" />

                <TextView
                    android:id="@+id/tv_detail_title"
                    android:textSize="18.0dip"
                    android:textColor="#000000"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:fontFamily="@font/applesdgothicneob"
                    android:text="menu name"
                    android:maxLines="1"
                    android:layout_weight="1.0"
                    android:textAlignment="center" />

                <ImageView
                    android:id="@+id/iv_list_filter"
                    android:layout_gravity="center|right"
                    android:layout_width="25.0dip"
                    android:layout_height="25.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="20.0dip"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/sv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_appbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_detail_menu"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/tv_detail_menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/iv_detail_menu"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="11dp"
                android:text="menu name"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_detail_menu_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_menu_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="3dp"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="찜기에서 따뜻하게 삶겨진 순대가 육수를 만났을 때"
                android:textSize="15sp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/tv_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_menu_detail"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:text="@string/detail_price"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_price"
                android:layout_marginTop="10dp"/>

            <View
                android:id="@+id/line_detail"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                app:layout_constraintTop_toBottomOf="@id/rv_detail"
                android:layout_marginTop="20dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_detail_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/line_detail"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:text="@string/detail_number"
                android:textSize="17sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:id="@+id/ll_detail_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/tv_detail_number"
                app:layout_constraintBottom_toBottomOf="@id/tv_detail_number"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:background="@drawable/round_rectangle">

                <ImageView
                    android:id="@+id/iv_detail_number_minus"
                    android:layout_width="10sp"
                    android:layout_height="10sp"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    android:layout_gravity="center"
                    android:src="@drawable/minus"/>

                <TextView
                    android:id="@+id/tv_detail_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1개"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/iv_detail_number_plus"
                    android:layout_width="10sp"
                    android:layout_height="10sp"
                    android:layout_weight="1"
                    android:elevation="1dp"
                    android:layout_gravity="center"
                    android:src="@drawable/plus"/>

            </LinearLayout>

            <View
                android:id="@+id/line_detail_2"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_number"
                android:layout_marginTop="30dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_detail_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/line_detail_2"
                android:padding="20dp"
                android:text="@string/detail_warning"
                android:textSize="10sp"
                android:textAlignment="center"
                android:background="@color/gray"/>

            <View
                android:id="@+id/line_detail_3"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                app:layout_constraintTop_toBottomOf="@id/tv_detail_warning"
                android:background="@color/black"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_detail_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="15dp"
        android:text="1개 담기"
        android:textAlignment="center"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/tv_detail_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/btn_detail_order"
        app:layout_constraintTop_toTopOf="@id/btn_detail_order"
        app:layout_constraintBottom_toBottomOf="@id/btn_detail_order"
        android:layout_marginRight="17dp"
        android:elevation="2dp"
        android:text="23000원"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>